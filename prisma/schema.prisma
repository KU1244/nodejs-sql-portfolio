generator client {
  provider = "prisma-client-js"
  // Keep default output path (safe to remove if not customized)
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  ownerId      Int?
  passwordHash String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt @default(now()) // ← default(now()) を追加
}
