{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "baseUrl": ".",                        // ★ 追加
    "paths": { "@/*": ["./src/*"] },       // '@/xxx' → src/xxx
    "plugins": [{ "name": "next" }]        // ★ 追加（型補助）
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"                  // ★ 追加（型参照）
  ],
  "exclude": ["node_modules"]
}
